{
  "name": "意志が弱いなら環境を変えればいいじゃない。",
  "version": "0.1",
  "description": "自身にとって毒となるサイトを登録できます。そのサイトを訪れると怒られます。",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs",
    "alarms",
    "notifications",
    "https://twitter.com/oauth/*",
    "https://api.twitter.com/*",
    "http://localhost/*"
  ],
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true,
    "open_in_tab" : true
  },
  "background": {
    "scripts": [
      "lib/jquery.min.js",
      "lib/jquery-ui.min.js",
      "background/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "img/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "lib/jquery.min.js",
        "lib/jquery-ui.min.js",
        "contentScript/content.js"
      ],
      "css": [
        "lib/jquery-ui.min.css",
        "contentScript/content.css"
      ]

    }
  ],
  "icons": {
    "128": "img/icon.png"
  },
  "content_security_policy": "script-src 'self' https://api.twitter.com/ https://stackpath.bootstrapcdn.com https://cdn.jsdelivr.net https://*.jquery.com https://platform.twitter.com ; object-src 'self'",
  "externally_connectable": {
    "matches": [
      "https://oauth.io/*"
    ]
  },
  "web_accessible_resources": [
    "img/*",
    "lib/*",
    "background/*",
    "contentScript/*",
    "options/*",
    "popup/*"
  ],
  "manifest_version": 2
}